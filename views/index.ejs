<!doctype html>
<html lang="en">
  <head>
    <%- include('layouts/head') %>
    <script type="module" src="js/start.js"></script>
  </head>
  <body>
    <div class="screen">
      <%- include('layouts/header') %>
      <main class="content">
        <section class="date" aria-label="Current date">
          <span><%= year %></span>
          <span><%= month %></span>
          <span><%= day %></span>
        </section>
        <form class="action" id="start-form" hx-post="/start" hx-swap="none">
          <input type="hidden" name="date" id="date" />
          <input type="hidden" name="time" id="time" />
          <button class="start-button" type="submit">Start</button>
        </form>
      </main>
    </div>
  </body>
</html>
